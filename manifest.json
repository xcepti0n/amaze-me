{
  "manifest_version": 2,
  "name": "amaze-public",
  "description": "This extension shows a current price of selected amazon item",
  "version": "0.1",
  "browser_action": {
    "default_icon": "public/icon.png",
    "default_popup": "public/popup.html"
  },
  "permissions": [
      "storage"
    ],
  "content_scripts": [
  {
    "matches": [
      "<all_urls>"
    ],
    "js": ["public/jquery_3.1.1.js"]
  }
]
}
